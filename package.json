{
  "name": "subscribe-to-comments-reloaded",
  "version": "1.0.0",
  "description": "Subscribe to Comments Reloaded WordPress Plugin",
  "scripts": {
    "clean": "node scripts/clean.js",
    "sass:watch": "sass src/includes/sass:src/includes/css --watch --no-source-map",
    "lint": "eslint src/**/*.js",
    "copy:vendor": "node scripts/copy-vendor.js",
    "build:css": "sass src/includes/sass:build/includes/css --style compressed --no-source-map",
    "build:copy": "node scripts/build-copy.js",
    "zip": "node scripts/create-zip.js",
    "build": "npm run clean && npm run lint && npm run copy:vendor && npm run build:css && npm run build:copy && npm run zip",
    "dev": "npm run sass:watch"
  },
  "devDependencies": {
    "sass": "^1.70.0",
    "eslint": "^8.56.0",
    "archiver": "^6.0.1",
    "fs-extra": "^11.2.0",
    "bootstrap": "^4.6.2",
    "datatables.net": "^1.13.8",
    "datatables.net-bs4": "^1.13.8",
    "datatables.net-responsive": "^2.5.0",
    "datatables.net-responsive-bs4": "^2.5.0",
    "font-awesome": "^4.7.0",
    "webui-popover": "sandywalker/webui-popover"
  }
}
